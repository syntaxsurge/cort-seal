# Convex
CONVEX_DEPLOYMENT=
NEXT_PUBLIC_CONVEX_URL=

# Cortensor Router (Web2 API)
CORTENSOR_ROUTER_URL=
CORTENSOR_API_KEY=
CORTENSOR_SESSION_ID=0
CORTENSOR_TIMEOUT_SECONDS=60

# Server-to-Convex ingest token
# Set the same value in Convex env vars (used by Convex mutations):
# `pnpm convex env set CORTSEAL_INGEST_TOKEN "<value>"`
CORTSEAL_INGEST_TOKEN=

# Monitors
# Used to build absolute seal URLs in Discord alerts (also configure in Convex env vars).
APP_URL=http://localhost:3000
# Optional: Discord webhook for monitor alerts (also configure in Convex env vars).
DISCORD_WEBHOOK_URL=

# CortSeal (claim checks)
# Max number of claims to extract and verify per run.
CORTSEAL_MAX_CLAIMS=12
# Redundant verifier runs per claim (PoI-style agreement/dispersion).
CORTSEAL_VERIFIER_RUNS_PER_CLAIM=3
# Concurrency across verifier calls (keep low to avoid throttling).
CORTSEAL_VERIFIER_CONCURRENCY=3

# CortSeal (PoUW rubric scoring)
# Redundant rubric scoring runs (averaged for stability).
CORTSEAL_RUBRIC_RUNS=3
# Concurrency across rubric calls (keep low to avoid throttling).
CORTSEAL_RUBRIC_CONCURRENCY=2

# CortSeal proofs
# Maximum size (bytes) for stored proof evidence bundles.
CORTSEAL_PROOF_MAX_BYTES=900000
